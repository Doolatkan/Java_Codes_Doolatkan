package day22_stringManipulation_Lab;

public class String_IsEmpty {

	public static void main(String[] args) {
		
		String userName = "     ";
		String password = "";
		
		System.out.println(userName.isEmpty());//return true if, and only if length() is 0
		System.out.println(password.isEmpty());//return true if, and only if length() is 0
		
		if(userName.isEmpty()) {
			System.out.println("User name field can not be empty");
		}else {
			System.out.println("User is not empty: " + userName);
		}
		
		if(userName.isEmpty()|| password.isEmpty()) {
			System.out.println("User name or password fields can not be empty");
		}else {
			System.out.println("User name or password is not empty: " + userName + password);
		}
		
		System.out.println(userName.isBlank());//return true if the string is empty or contains only white space
		System.out.println(password.isBlank());//return true if the string is empty or contains only white space

	}

}
